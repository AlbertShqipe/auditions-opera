<div class="devise_container">
  <h2><%= t("devise.passwords.edit.h2") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: t("devise.passwords.edit.label1"),
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} #{t('devise.passwords.edit.hint')}" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: t("devise.passwords.edit.label2"),
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.passwords.edit.btn_submit"), class:"submit-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
